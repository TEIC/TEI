<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="textstructure" xml:id="EPIGRAPH" usage="opt" ident="epigraph">
<equiv/>
<gloss>epigraph</gloss><gloss version="2006-10-28" xml:lang="ja">題辞</gloss>
<desc>contains a quotation, anonymous or attributed, appearing at
the start of a section or chapter, or on a title page. </desc><desc version="2006-10-28" xml:lang="ja"> 章や節，タイトルページなどにある引用を示す．</desc>
  <classes>
    <memberOf key="model.divWrapper"/>
    <memberOf key="model.titlepagePart"/>
    <memberOf key="model.pLike.front"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.componentSeq"/>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <epigraph xml:lang="la">
        <cit>
          <bibl>Lucret.</bibl>
          <quote>
            <l part="F">petere inde coronam,</l>
            <l>Vnde prius nulli velarint tempora Musae.</l>
          </quote>
        </cit>
      </epigraph>
    </egXML>
  </exemplum>
  <remarks/>
  <listRef>
    <ptr target="#DSCO"/>
    <ptr target="#DSDTB"/>
    <ptr target="#DSTITL"/>
  </listRef>
</elementSpec>
