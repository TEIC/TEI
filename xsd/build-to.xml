  <!--
 Convert TEI documents into XSD files.
 -->
  <import file="../common/teianttasks.xml"/>

 <target name="dist" depends="go,oddcleanup"/>

  <!-- Obtain a Relax NG schema and afterward transform it to XSD using TRANG. -->
  <target name="go">
    <oddexpand in="${inputFile}" out="${inputFile}.processedodd"/>
    <buildgeneric type="relaxng" xsl="${profiledir}/${profile}/relaxng/to.xsl" in="${inputFile}.processedodd" out="${outputFile}.rng"/>
    <echo level="info">TRANG generate XSD from RELAXNG files</echo>
    <java classname="com.thaiopensource.relaxng.translate.Driver" fork="no">
      <classpath>
        <path refid="classpath"/>
        <pathelement location="${trang.jar}"/>
      </classpath>
      <!-- Even though the output type is inferred from the output file extension,
                 make sure it's the right one. -->
      <arg value="-O"/>
      <arg value="xsd"/>
      <arg value="${outputFile}.rng"/>
      <arg value="${outputFile}.tmp"/>
    </java>
    <delete file="${outputFile}.rng"/>
    <xslt force="yes" style="postprocess.xsl" in="${outputFile}.tmp" out="${outputFile}">
      <factory name="net.sf.saxon.TransformerFactoryImpl"/>
    </xslt>
    <delete file="${outputFile}.tmp"/>
  </target>
</project>
