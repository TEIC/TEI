<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="core" xml:id="SP" usage="opt" ident="sp">
<equiv/>
<gloss>speech</gloss><gloss version="2006-10-28" xml:lang="ja">発話</gloss>
<desc>An individual speech in a performance text, or a passage
	  presented as such in a prose or verse text.</desc><desc version="2006-10-28" xml:lang="ja"> 舞台用テキストや，韻文・散文中に出現する発話．</desc>
  <classes>
    <memberOf key="model.divPart"/>
    <memberOf key="att.ascribed"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:zeroOrMore>
        <rng:ref name="model.global"/>
      </rng:zeroOrMore>
      <rng:optional>
        <rng:ref name="speaker"/>
        <rng:zeroOrMore>
          <rng:ref name="model.global"/>
        </rng:zeroOrMore>
      </rng:optional>
      <rng:oneOrMore>
        <rng:choice>
          <rng:ref name="model.lLike"/>
          <rng:ref name="lg"/>
          <rng:ref name="model.pLike"/>
          <rng:ref name="model.blockLike"/>
          <rng:ref name="model.stageLike"/>
        </rng:choice>
        <rng:zeroOrMore>
          <rng:ref name="model.global"/>
        </rng:zeroOrMore>
      </rng:oneOrMore>
    </rng:group>
  </content>
  
