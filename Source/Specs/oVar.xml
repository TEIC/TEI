<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="dictionaries" xml:id="OVAR" usage="opt" ident="oVar">
  <equiv/>
  <gloss>orthographic-variant reference</gloss>
  <gloss version="2007-01-21" xml:lang="it">riferimento alla variante ortografica</gloss>
  <gloss version="2007-05-04" xml:lang="es">referencia de variante ortográfica</gloss>
  <gloss version="2006-10-28" xml:lang="ja">見出し語の別形</gloss>
  <desc>in a dictionary example, indicates a reference to variant orthographic form(s) of the
    headword.</desc>
  <desc version="2007-01-21" xml:lang="it">nell'esempio in un dizionario, indica un riferimento alla variante (varianti) ortografica del lemma.</desc>
  <desc version="2007-05-04" xml:lang="es">en un diccionario, indica una referencia a una forma/s de
    variante ortográfica del lema.</desc>
  <desc version="2006-10-28" xml:lang="ja"> 例文中から，見出し語の別な形を参照する．</desc>
  <classes>
    <memberOf key="model.ptrLike.form"/>
    <memberOf key="att.ptrLike.form"/>
    <memberOf key="att.lexicographic"/>
  </classes>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:text/>
        <rng:ref name="model.gLike"/>
        <rng:ref name="oRef"/>
      </rng:choice>
    </rng:zeroOrMore>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
      <equiv/>
      <desc>indicates the kind of variant involved.</desc>
      <desc version="2007-01-21" xml:lang="it">indica il tipo di variante.</desc>
      <desc version="2007-05-04" xml:lang="es">indica el tipo de variante implicada</desc>
      <desc version="2006-10-28" xml:lang="ja">当該参照の種類を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valList type="open">
        <valItem ident="pt">
          <equiv/>
          <gloss>past tense</gloss>
          <gloss version="2007-01-21" xml:lang="it">tempo passato</gloss>
          <gloss version="2007-05-04" xml:lang="es">pasado</gloss>
        </valItem>
        <valItem ident="pp">
          <equiv/>
          <gloss>past participle</gloss>
          <gloss version="2007-01-21" xml:lang="it">participio passato</gloss>
          <gloss version="2007-05-04" xml:lang="es">participio pasado</gloss>
        </valItem>
        <valItem ident="prp">
          <equiv/>
          <gloss>present participle</gloss>
          <gloss version="2007-01-21" xml:lang="it">participio presente</gloss>
          <gloss version="2007-05-04" xml:lang="es">participio presente</gloss>
        </valItem>
        <valItem ident="f">
          <equiv/>
          <gloss>feminine</gloss>
          <gloss version="2007-01-21" xml:lang="it">femminile</gloss>
          <gloss version="2007-05-04" xml:lang="es">femenino</gloss>
        </valItem>
        <valItem ident="pl">
          <equiv/>
          <gloss>plural</gloss>
          <gloss version="2007-01-21" xml:lang="it">plurale</gloss>
        </valItem>
      </valList>
      <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
      </exemplum>
      <remarks>
        <p/>
      </remarks>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <entry>
        <form>
          <orth>take</orth>
        </form>
        <cit type="example">
          <quote>Mr Burton <oVar type="pt">took</oVar> us for French</quote>
        </cit>
      </entry>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">Character data or <gi>oRef</gi>.</p>
  </remarks>
  <listRef>
    <ptr target="#DI"/>
  </listRef>
</elementSpec>
