      <annotationBlock who="#SPK1" start="#T2" end="#T3" xml:id="ag20">
        <u xml:id="u20">
          <seg xml:id="seg37" type="utterance" subtype="modeless">
            <w xml:id="w46">Yeah</w>
          </seg>
        </u>
      </annotationBlock>
      <annotationBlock who="#SPK1" start="#T5" end="#T6" xml:id="ag21">
