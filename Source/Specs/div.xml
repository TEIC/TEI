    <memberOf key="att.declaring"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">

      <rng:zeroOrMore>
        <rng:choice>
          <rng:ref name="model.divWrapper"/>
          <rng:ref name="model.global"/>
        </rng:choice>
      </rng:zeroOrMore>
<rng:optional>
      <rng:choice>

	<rng:group>
	  <rng:oneOrMore>
	    <rng:choice>
	      <rng:ref name="div"/>
	      <rng:ref name="divGen"/>
	    </rng:choice>
	    <rng:zeroOrMore>
	      <rng:ref name="model.global"/>
	    </rng:zeroOrMore>
	  </rng:oneOrMore>
	</rng:group>

        <rng:group>
          <rng:oneOrMore>
            <rng:ref name="macro.component"/>
	    <rng:zeroOrMore>
	      <rng:ref name="model.global"/>
	    </rng:zeroOrMore>
          </rng:oneOrMore>
          <rng:zeroOrMore>
	    <rng:choice>
              <rng:ref name="div"/>
              <rng:ref name="divGen"/>
            </rng:choice>
	    <rng:zeroOrMore>
	      <rng:ref name="model.global"/>
	    </rng:zeroOrMore>
	  </rng:zeroOrMore>
        </rng:group>

      </rng:choice>
      
	  <rng:zeroOrMore>
	    <rng:choice>
	      <rng:ref name="model.divWrapper"/>
	      <rng:ref name="model.divWrapper.bottom"/>
	    </rng:choice>
	    <rng:zeroOrMore>
	      <rng:ref name="model.global"/>
	    </rng:zeroOrMore>
	  </rng:zeroOrMore>
</rng:optional>
    </rng:group>
  
  </content>
